<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_surfaceVariant"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/sidebarTitle"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:text="Operit"
        android:gravity="center_vertical"
        android:textSize="22sp"
        android:paddingStart="12dp"
        android:fontFamily="serif"
        android:textColor="@color/md_theme_light_onSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- New Chat Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNewChat"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/nav_new_chat"
        android:textColor="@color/md_theme_light_onPrimary"
        android:backgroundTint="@color/md_theme_light_primary"
        app:icon="@drawable/ic_add"
        app:iconGravity="textStart"
        app:cornerRadius="28dp"
        android:textAllCaps="false"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/sidebarTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Menu Section -->
    <TextView
        android:id="@+id/tvMenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/section_menu"
        android:textSize="12sp"
        android:textColor="@color/md_theme_light_onSurfaceVariant"
        android:letterSpacing="0.1"
        android:paddingStart="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnNewChat"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/menuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvMenuTitle">

        <!-- Initial "active" item -->
        <TextView
            android:id="@+id/navChat"
            style="@style/NavItem.Active"
            android:text="@string/nav_chat"
            app:drawableStartCompat="@drawable/ic_chat"/>
            
        <TextView
            android:id="@+id/navTools"
            style="@style/NavItem"
            android:text="@string/nav_tools"
            app:drawableStartCompat="@drawable/ic_grid"/>

        <TextView
            android:id="@+id/navScripts"
            style="@style/NavItem"
            android:text="@string/nav_scripts"
            app:drawableStartCompat="@drawable/ic_code"/>

        <TextView
            android:id="@+id/navLogs"
            style="@style/NavItem"
            android:text="@string/nav_logs"
            app:drawableStartCompat="@drawable/ic_terminal"/>
            
        <TextView
            android:id="@+id/navHelp"
            style="@style/NavItem"
            android:text="@string/nav_help"
            app:drawableStartCompat="@drawable/ic_help"/>
            
        <TextView
            android:id="@+id/navSettings"
            style="@style/NavItem"
            android:text="@string/nav_settings"
            app:drawableStartCompat="@drawable/ic_settings"/>
    </LinearLayout>

    <!-- History Section (Flexible) -->
    <TextView
        android:id="@+id/tvHistoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/section_history"
        android:textSize="12sp"
        android:textColor="@color/md_theme_light_onSurfaceVariant"
        android:letterSpacing="0.1"
        android:paddingStart="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/menuContainer"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvHistoryTitle"
        app:layout_constraintBottom_toTopOf="@id/userSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- User Section -->
    <LinearLayout
        android:id="@+id/userSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_avatar_placeholder"/>
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:textColor="@color/md_theme_light_onSurface"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
