<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/chat_item_padding_horizontal"
    android:paddingEnd="@dimen/chat_item_padding_horizontal"
    android:paddingTop="@dimen/chat_item_padding_vertical"
    android:paddingBottom="@dimen/chat_item_padding_vertical">

    <TextView
        android:id="@+id/tvMessage"
        style="@style/ChatBubble.User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:maxWidth="@dimen/chat_bubble_max_width"
        android:text="User message"/>

</FrameLayout>
