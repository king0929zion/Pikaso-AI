<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_light_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_upward"
            android:rotation="270"
            android:background="@drawable/bg_tool_icon"
            android:backgroundTint="@color/md_theme_light_surface"
            app:tint="@color/md_theme_light_onBackground"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="提示词配置"
            android:textSize="22sp"
            android:fontFamily="serif"
            android:layout_marginStart="16dp"
            android:textColor="@color/md_theme_light_onBackground"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            style="@style/Widget.Pikaso.Button.Pill"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="保存"
            android:textSize="14sp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/md_theme_light_surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统提示词 (System Prompt)"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etSystemPrompt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:background="@null"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:text="你是一个智能手机助手，可以帮助用户操作手机应用。\n请优先使用无障碍服务进行点击和滑动操作。\n当用户请求模糊时，请主动询问更多细节。\n你可以使用以下工具：\n1. open_app(package_name)\n2. click(x, y)\n3. scroll(direction)\n..."/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
