<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        app:liftOnScroll="false">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="权限配置"
            app:navigationIcon="@drawable/ic_arrow_back"
            style="@style/Widget.Pikaso.Toolbar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.Pikaso.CardView.Large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Accessibility -->
                    <LinearLayout
                        android:id="@+id/itemAccessibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:background="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_accessibility"
                            android:layout_marginEnd="16dp"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="无障碍服务"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"/>
                            <TextView
                                android:id="@+id/tvAccessibilityStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="用于模拟点击和滑动"
                                android:textSize="13sp"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchAccessibility"
                            style="@style/Widget.Pikaso.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?attr/colorSurfaceVariant"/>

                    <!-- Shizuku -->
                    <LinearLayout
                        android:id="@+id/itemShizuku"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:background="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_adb"
                            android:layout_marginEnd="16dp"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shizuku"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"/>
                            <TextView
                                android:id="@+id/tvShizukuStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="用于高级系统操作"
                                android:textSize="13sp"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchShizuku"
                            style="@style/Widget.Pikaso.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                     <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?attr/colorSurfaceVariant"/>

                    <!-- Overlay -->
                    <LinearLayout
                        android:id="@+id/itemOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:background="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_layers"
                            android:layout_marginEnd="16dp"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="悬浮窗权限"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"/>
                            <TextView
                                android:id="@+id/tvOverlayStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="用于显示虚拟屏幕 Overlay"
                                android:textSize="13sp"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchOverlay"
                            style="@style/Widget.Pikaso.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                     <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?attr/colorSurfaceVariant"/>

                    <!-- Battery -->
                    <LinearLayout
                        android:id="@+id/itemBattery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:background="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_battery_full"
                            android:layout_marginEnd="16dp"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="忽略电池优化"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"/>
                            <TextView
                                android:id="@+id/tvBatteryStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="防止后台服务被杀"
                                android:textSize="13sp"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchBattery"
                            style="@style/Widget.Pikaso.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorSurfaceVariant" />

                    <!-- Notifications -->
                    <LinearLayout
                        android:id="@+id/itemNotifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_notifications"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="通知权限"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvNotificationsStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="用于通知提示（Android 13+）"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchNotifications"
                            style="@style/Widget.Pikaso.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorSurfaceVariant" />

                    <!-- Location -->
                    <LinearLayout
                        android:id="@+id/itemLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_my_location"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="位置权限"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvLocationStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="用于需要定位的扩展能力"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchLocation"
                            style="@style/Widget.Pikaso.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorSurfaceVariant" />

                    <!-- Media / Storage Read -->
                    <LinearLayout
                        android:id="@+id/itemStorageRead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_photo_library"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="读取图片/存储"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvStorageReadStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="用于读取图片附件（Android 13+ 为读取图片权限）"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchStorageRead"
                            style="@style/Widget.Pikaso.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorSurfaceVariant" />

                    <!-- All files access -->
                    <LinearLayout
                        android:id="@+id/itemAllFiles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_folder_open"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="所有文件访问"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvAllFilesStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="用于需要访问外部文件的能力（Android 11+）"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchAllFiles"
                            style="@style/Widget.Pikaso.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
