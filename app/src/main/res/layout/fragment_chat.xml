<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_background">

    <!-- Chat RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/inputAreaContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp">

        <FrameLayout
            android:layout_width="@dimen/icon_tool_size"
            android:layout_height="@dimen/icon_tool_size"
            android:background="@drawable/bg_empty_state_icon">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_smart_toy"
                android:layout_gravity="center"
                app:tint="@color/md_theme_light_onSurfaceVariant"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有什么可以帮你的吗？"
            android:textSize="22sp"
            android:textColor="@color/md_theme_light_onBackground"
            android:fontFamily="serif"
            android:layout_marginTop="24dp"/>
    </LinearLayout>

    <!-- Input Area Gradient -->
    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_input_gradient"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Input Area Container -->
    <LinearLayout
        android:id="@+id/inputAreaContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_input_container"
        android:elevation="0dp"
        android:padding="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/chatInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ask Pikaso..."
            android:background="@null"
            android:minHeight="48dp"
            android:maxHeight="160dp"
            android:textSize="16sp"
            android:textColor="@color/md_theme_light_onBackground"
            android:textColorHint="@color/md_theme_light_onSurfaceVariant"
            android:inputType="textMultiLine"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Attach button - no background -->
            <ImageButton
                android:id="@+id/btnAttach"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/md_theme_light_onSurfaceVariant"/>

            <!-- Tools button - no background, better icon -->
            <ImageButton
                android:id="@+id/btnTools"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_extension"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/md_theme_light_onSurfaceVariant"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- Send button - circular with icon -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSend"
                style="@style/Widget.Pikaso.Button.Icon.Circle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:icon="@drawable/ic_arrow_upward"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
