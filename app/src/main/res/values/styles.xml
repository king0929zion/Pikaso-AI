<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Chat Bubble Styles -->
    <style name="ChatBubble">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="ChatBubble.User" parent="ChatBubble">
        <item name="android:background">@drawable/bg_chat_bubble_user</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
    </style>

    <style name="ChatBubble.Ai" parent="ChatBubble">
        <item name="android:background">@drawable/bg_chat_bubble_ai</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>
