<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    
    <style name="NavItem.Active" parent="NavItem">
        <item name="android:background">@drawable/bg_nav_item_active</item>
        <item name="android:textColor">@color/md_theme_light_onSecondaryContainer</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChatBubble">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="ChatBubble.User" parent="ChatBubble">
        <item name="android:background">@drawable/bg_chat_bubble_user</item>
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
    </style>

    <style name="ChatBubble.Ai" parent="ChatBubble">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
    </style>
</resources>
